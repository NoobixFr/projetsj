{# app/Resources/views/article/create_articles.html.twig #}

{# On hérite de notre vue de base #}
{% extends "::base.html.twig" %}

{% block content %}
    <section>
        <div class="row">
            <div class="col-xs-offset-1">
                <h4>Création d'un article.</h4>
            </div>
        </div>
        <div class="row">

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="col-xs-offset-1 col-xs-10">
                {# Génération manuelle et éclatée : #}
                <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.title, "Titre de l'Article", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.title) }}

                    <div class="col-sm-10">
                        {# Génération de l'input. #}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                {# Idem pour un autre champ. #}
                <div class="form-group">
                    {{ form_label(form.content, "Contenu de l'annonce", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.title) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                {# Idem pour un autre champ. #}
                <div class="form-group">
                    {{ form_label(form.published, "Publier l'article", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.published) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.published) }}
                    </div>
                </div>

                <div class="col-offset-xs-2">
                    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>


            </div>

            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}